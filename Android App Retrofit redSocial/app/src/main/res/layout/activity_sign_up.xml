<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAzul"
    android:orientation="vertical"
    tools:context=".Ui.auth.SignUpActivity">

    <ImageView
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/lgog"
        tools:layout_editor_absoluteX="143dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRO USUARIO"
        android:textSize="20dp"
        android:textAlignment="center"
        android:padding="4dp"
        android:textColor="@android:color/white"
        ></TextView>

    <EditText
        android:id="@+id/usernameup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:padding="8dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="25dp"
        tools:layout_editor_absoluteY="100dp">
    </EditText>

    <EditText
        android:id="@+id/emailup"
        android:textAlignment="center"
        android:textSize="25dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/usernameup">
    </EditText>


    <EditText
        android:id="@+id/passwordup"
        android:textAlignment="center"
        android:textSize="25dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:textColorHint="@android:color/white"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/emailup"></EditText>

    <Button
        android:padding="10dp"
        android:text="Registrar"
        android:id="@+id/iniciarSecionlogin"
        app:layout_constraintTop_toBottomOf="@+id/passwordup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></Button>

    <TextView
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iniciarSecionlogin"
        android:id="@+id/textviewgologin"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:text="Incia Sesion aqui"
        android:layout_height="wrap_content"></TextView>



</LinearLayout>