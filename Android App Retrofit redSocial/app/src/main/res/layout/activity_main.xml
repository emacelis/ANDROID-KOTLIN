<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAzul"
    android:orientation="vertical"
    tools:context=".Ui.auth.MainActivity"
    android:animateLayoutChanges="true"
    >

    <ImageView
        android:padding="8dp"
        app:srcCompat="@drawable/lgog"
        android:id="@+id/imagenlogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
    </ImageView>



    <EditText
        android:id="@+id/emailmainactivity"
        android:textAlignment="center"
        android:textSize="25dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/imagenlogo">

    </EditText>


    <EditText
        android:id="@+id/passwordMainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:padding="8dp"
        android:password="true"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/emailmainactivity"></EditText>

    <Button
        android:padding="10dp"
        android:text="Iniciar Sesión"
        android:onClick="gotologin"
        android:id="@+id/iniciarSecionMA"
        app:layout_constraintTop_toBottomOf="@+id/passwordMainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></Button>

    <TextView
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iniciarSecionMA"
        android:id="@+id/notienesCuenta"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:text="¿No tienes cuenta?,Registrate"
        android:layout_height="wrap_content"></TextView>
</LinearLayout>