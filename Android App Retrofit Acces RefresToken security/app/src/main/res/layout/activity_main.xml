<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

   <EditText
       android:layout_margin="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/etUserName"
       android:hint="User name"></EditText>

    <EditText
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPassw"
        android:hint="Password"></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btObtenerToken"
        android:text="Obtener Token"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btCrearUsuario"
        android:text="Crear Usuario"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btVerTodosUsuarios"
        android:text="Ver Todos Usuarios"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btVerTodosLosMovBancarios"
        android:text="Ver todos los movimientos Bancarios"></Button>

</LinearLayout>